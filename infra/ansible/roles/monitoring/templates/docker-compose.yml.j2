#jinja2: lstrip_blocks: "True"
version: '3.7'
services:
  prometheus:
    image: {{ prometheus_image }}
    deploy:
      placement:
        constraints: [node.role == manager]
    ports:
      - '9090:9090'
    volumes:
      - prometheus_data:/prometheus
      - /etc/prometheus:/etc/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention=1d'
      - '--web.enable-lifecycle'
    networks:
      {{ prometheus_networks | to_nice_yaml(indent=2) | indent(6,False) }}

  trickster:
    image: {{ trickster_image }}
    ports:
      - 9089:9089
    depends_on:
      - prometheus
    networks:
      {{ trickster_networks | to_nice_yaml(indent=2) | indent(6,False) }}

  grafana:
    image: {{ grafana_image }}
    volumes:
      - grafana_data:/var/lib/grafana
    environment:
      - GF_SECURITY_ADMIN_USER=admin
      - GF_SECURITY_ADMIN_PASSWORD=secret
    depends_on:
      - prometheus
    ports:
      - 3000:3000
    networks:
      {{ grafana_networks | to_nice_yaml(indent=2) | indent(6,False) }}

  alertmanager:
    image: {{ alertmanager_image }}
    command:
      - '--config.file=/etc/alertmanager/config.yml'
    ports:
      - 9093:9093
    networks:
      {{ alertmanager_networks | to_nice_yaml(indent=2) | indent(6,False) }}

  node-exporter:
    image: {{ node-exporter_image }}
    user: root
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
    command:
      - '--path.procfs=/host/proc'
      - '--path.sysfs=/host/sys'
      - '--collector.filesystem.ignored-mount-points="^/(sys|proc|dev|host|etc)($$|/)"'
    networks:
      {{ node-exporter_networks | to_nice_yaml(indent=2) | indent(6,False) }}

volumes:
  prometheus_data:
  grafana_data:

networks:
{% for net in monitoring_networks %}
  {% for key, value in net.items() %}
  {{ key }}:
    name: {{ key }}
    {{ value | to_nice_yaml(indent=2) | indent(6, False) }}
  {% endfor %}
{% endfor %}
